<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ListView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/lview"/>


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" app:layout_constraintBottom_toBottomOf="parent" android:orientation="horizontal">

    <EditText android:layout_height="wrap_content" android:layout_width="200dp" android:id="@+id/edtext" android:hint="@string/edhint"/>

    <Switch android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/switch1" android:text="@string/swtext"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/btn" android:text="ADD" android:background="#0000ff" android:onClick="additem" android:padding="20dp"/>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>